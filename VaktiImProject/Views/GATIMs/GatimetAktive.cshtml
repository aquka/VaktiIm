@model  List<VaktiImProject.Models.GATIM>
@{
    ViewBag.Title = "Gatimet Aktive";
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="row">
        <div class="col-md-12 alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <h4> Lista e gatimeve aktive</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Emri
                    </th>
                    <th>
                        Kategoria
                    </th>
                    <th>Pershkrimi</th>
                    <th>Veprime</th>
                </tr>
            </thead>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.emriGatimit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KATEGORI.emri)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.pershkrimi)
                        </td>

                        <td>
                            <a href="@Url.Action("GatimeDetails", new { id = item.gatim_id })" class="btn btn-info btn-sm">
                                <i class="fa fa-info"></i>
                                Detaje
                            </a>
                        </td>
                    </tr>
                }
            }

        </table>
    </div>
</div>