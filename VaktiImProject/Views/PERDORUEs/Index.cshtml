@model IEnumerable<VaktiImProject.Models.PERDORUE>

@{
    ViewBag.Title = "Perdoruesit";
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="row">
        <div class="col-md-12 alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <h4> Lista e Përdoruesve</h4>
    </div>
    <div class="col-md-4">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fa fa-plus-square"></i>
            Shto
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Emri
                    </th>
                    <th>
                        Mbiemri
                    </th>
                    <th>Roli</th>
                    <th>Statusi</th>
                    <th>Krijuar me</th>
                    <th>Veprime</th>
                </tr>
            </thead>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.emri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mbiemri)
                </td>
                <td>@Html.DisplayFor(modelItem => item.ROLI.emri)</td>
                <td>@Html.DisplayFor(modelItem => item.aktiv)</td>
                <td>@item.krijimPerdorues.ToString("dd.MM.yyyy")</td>
                <td class="btn-group">
                    <a href="@Url.Action("Edit", new { id = item.perdorues_id })" class="btn btn-warning">
                        <i class="fa fa-edit"></i>
                        Modifiko
                    </a>
                    <a href="@Url.Action("Details", new { id = item.perdorues_id })" class="btn btn-info">
                        <i class="fa fa-info"></i>
                        Detaje
                    </a>
                </td>
            </tr>
                }
            }

        </table>
    </div>
</div>
